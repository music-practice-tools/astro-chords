      <option value='E'>E</option>
      <option value='F'>F</option>
      <option value='G'>G</option>
      <option value='A'>A</option>
      <option value='B'>B</option>
    </select>
  </label>
  <label
    >Accidental:
    <select id='accidental'>
      <option value=''></option>
      <option value='b'>b</option>
      <option value='bb'>bb</option>
      <option value='#'>#</option>
      <option value='##'>##</option>
    </select>
  </label>
